    gDominatableZoneID[sizeof (gZoneAreaData)]
;

/**
 * # Functions
 */

stock GetGangColor(id, alpha = 0xFF) {
    return (alpha | (~0xFF & gGangData[id][E_GANG_COLOR]));
}

/**
 * # Hooks
 */

hook OnGameModeInit() {
    for (new i, size = sizeof (gZoneAreaData); i < size; ++i) {
        gDominatableZoneID[i] = GangZoneCreate(gZoneAreaData[i][E_ZONE_AREA_MIN_X], gZoneAreaData[i][E_ZONE_AREA_MIN_Y], gZoneAreaData[i][E_ZONE_AREA_MAX_X], gZoneAreaData[i][E_ZONE_AREA_MAX_Y]);
    }
    
    return 1;
}

hook OnPlayerSpawn(playerid) {
    for (new i, size = sizeof (gZoneAreaData); i < size; ++i) {
        GangZoneShowForPlayer(playerid, gDominatableZoneID[i], GetGangColor(gZoneAreaData[i][E_ZONE_AREA_GANG_ID], 0x80));
    }

    return 1;
}
